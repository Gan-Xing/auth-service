    <!-- 创建租户模态框 -->
    <div class="modal" id="createTenantModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">创建新租户</h3>
                <button class="modal-close" onclick="closeModal()">&times;</button>
            </div>
            <div id="createTenantForm">
                <!-- 租户创建表单内容 -->
                <div style="padding: 20px; text-align: center; color: #6b7280;">
                    租户创建功能正在开发中...
                </div>
            </div>
        </div>
    </div>

    <script>
        // 页面初始化和功能实现
        document.addEventListener('DOMContentLoaded', function() {
            console.log('✅ 租户管理页面加载完成');
            initializeTenants();
        });

        // 当前页面状态
        let currentPage = {{pagination.page}};
        let totalPages = {{pagination.pages}};
        let pageSize = 20;
        let filters = {};

        // 初始化租户管理页面
        function initializeTenants() {
            // 页面数据已由服务端提供，只需绑定事件
            bindEventListeners();
            updatePaginationButtons();
        }

        // 绑定事件监听器
        function bindEventListeners() {
            // 搜索框输入事件 - 使用页面跳转而非AJAX
            document.getElementById('tenantSearch').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    applyFilters();
                }
            });
            
            // 筛选器变化事件 - 使用页面跳转而非AJAX
            ['statusFilter', 'planFilter', 'domainFilter'].forEach(id => {
                document.getElementById(id).addEventListener('change', applyFilters);
            });
        }

        // 更新分页按钮状态
        function updatePaginationButtons() {
            document.getElementById('prevBtn').disabled = currentPage <= 1;
            document.getElementById('nextBtn').disabled = currentPage >= totalPages;
        }

        // 应用筛选器 - 通过页面跳转
        function applyFilters() {
            const searchTerm = document.getElementById('tenantSearch').value;
            const statusFilter = document.getElementById('statusFilter').value;
            const planFilter = document.getElementById('planFilter').value;
            const domainFilter = document.getElementById('domainFilter').value;
            
            const params = new URLSearchParams();
            params.set('page', '1'); // 重置到第一页
            if (searchTerm) params.set('search', searchTerm);
            if (statusFilter) params.set('status', statusFilter);
            if (planFilter) params.set('plan', planFilter);
            if (domainFilter) params.set('domain', domainFilter);
            
            window.location.search = params.toString();
        }

        // 清除筛选器
        function clearFilters() {
            window.location.href = '/admin/tenants';
        }

        // 上一页
        function previousPage() {
            if (currentPage > 1) {
                const params = new URLSearchParams(window.location.search);
                params.set('page', (currentPage - 1).toString());
                window.location.search = params.toString();
            }
        }

        // 下一页
        function nextPage() {
            if (currentPage < totalPages) {
                const params = new URLSearchParams(window.location.search);
                params.set('page', (currentPage + 1).toString());
                window.location.search = params.toString();
            }
        }

        // 刷新租户列表
        function refreshTenants() {
            window.location.reload();
        }

        // 导出租户列表
        function exportTenants() {
            // 构建当前筛选条件的导出URL
            const params = new URLSearchParams(window.location.search);
            params.set('export', 'csv');
            
            // 创建下载链接
            const exportUrl = '/admin/api/tenants/export?' + params.toString();
            const a = document.createElement('a');
            a.href = exportUrl;
            a.download = `tenants-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            
            showSuccess('开始导出租户数据...');
        }

        // 租户操作函数
        function viewTenant(tenantId) {
            window.location.href = `/admin/tenants/${tenantId}`;
        }

        function editTenant(tenantId) {
            window.location.href = `/admin/tenants/${tenantId}/edit`;
        }

        function suspendTenant(tenantId) {
            if (confirm('确定要暂停这个租户吗？')) {
                performTenantAction(tenantId, 'suspend', '暂停');
            }
        }

        function activateTenant(tenantId) {
            if (confirm('确定要激活这个租户吗？')) {
                performTenantAction(tenantId, 'activate', '激活');
            }
        }

        async function performTenantAction(tenantId, action, actionName) {
            try {
                const response = await fetch(`/admin/api/tenants/${tenantId}/${action}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showSuccess(`租户${actionName}成功！`);
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showError(`${actionName}失败：${data.message || '未知错误'}`);
                }
            } catch (error) {
                console.error(`租户${actionName}失败:`, error);
                showError(`${actionName}失败，请重试`);
            }
        }

        // 显示创建租户模态框
        function showCreateTenantModal() {
            document.getElementById('createTenantModal').classList.add('show');
        }

        // 关闭模态框
        function closeModal() {
            document.getElementById('createTenantModal').classList.remove('show');
        }

        // 显示成功消息
        function showSuccess(message) {
            showNotification(message, 'success');
        }

        // 显示错误消息
        function showError(message) {
            showNotification(message, 'error');
        }

        // 显示通知
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `notification notification-${type} show`;
            notification.innerHTML = `<span>${message}</span>`;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }

        // 添加CSS动画
        const style = document.createElement('style');
        style.textContent = `
            .animate-spin {
                animation: spin 1s linear infinite;
            }
            @keyframes spin {
                from { transform: rotate(0deg); }
                to { transform: rotate(360deg); }
            }
            .notification {
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 16px 20px;
                border-radius: 12px;
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
                backdrop-filter: blur(20px);
                z-index: 2000;
                transform: translateX(400px);
                transition: transform 0.4s ease;
            }
            .notification.show {
                transform: translateX(0);
            }
            .notification-success {
                background: rgba(34, 197, 94, 0.9);
                color: white;
                border: 1px solid rgba(34, 197, 94, 0.3);
            }
            .notification-error {
                background: rgba(239, 68, 68, 0.9);
                color: white;
                border: 1px solid rgba(239, 68, 68, 0.3);
            }
        `;
        document.head.appendChild(style);

        // 点击模态框外部关闭
        document.getElementById('createTenantModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });
    </script>
