{{!< layout/admin}}

<!-- 统计卡片 -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-value">{{stats.totalTenants}}</div>
        <div class="stat-label">总租户数</div>
        <div class="stat-change positive">+2 本月</div>
    </div>
    
    <div class="stat-card success">
        <div class="stat-value">{{stats.totalUsers}}</div>
        <div class="stat-label">总用户数</div>
        <div class="stat-change positive">+15 本周</div>
    </div>
    
    <div class="stat-card warning">
        <div class="stat-value">{{stats.todayLogins}}</div>
        <div class="stat-label">今日登录</div>
        <div class="stat-change positive">+12%</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-value">{{stats.todayRegistrations}}</div>
        <div class="stat-label">今日注册</div>
        <div class="stat-change positive">+3 今日</div>
    </div>
</div>

<!-- 系统状态和最近活动 -->
<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
    <!-- 系统健康状态 -->
    <div class="card">
        <div class="card-header">
            <h3>系统状态</h3>
            <p>各服务组件运行状态</p>
        </div>
        <div class="card-body">
            <div style="display: flex; flex-direction: column; gap: 16px;">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span>数据库</span>
                    <span class="status {{stats.systemHealth.database}}">
                        <span class="status-dot"></span>
                        {{#if (eq stats.systemHealth.database 'healthy')}}正常{{else}}异常{{/if}}
                    </span>
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span>邮件服务</span>
                    <span class="status {{stats.systemHealth.email}}">
                        <span class="status-dot"></span>
                        {{#if (eq stats.systemHealth.email 'healthy')}}正常{{else}}异常{{/if}}
                    </span>
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span>缓存服务</span>
                    <span class="status {{stats.systemHealth.cache}}">
                        <span class="status-dot"></span>
                        {{#if (eq stats.systemHealth.cache 'healthy')}}正常{{else if (eq stats.systemHealth.cache 'warning')}}警告{{else}}异常{{/if}}
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- 最近活动 -->
    <div class="card">
        <div class="card-header">
            <h3>最近活动</h3>
            <p>用户登录和注册活动</p>
        </div>
        <div class="card-body">
            <div style="display: flex; flex-direction: column; gap: 16px;">
                {{#each stats.recentActivity}}
                <div style="display: flex; justify-content: space-between; align-items: center; padding: 12px; background: var(--bg-secondary); border-radius: var(--border-radius);">
                    <div>
                        <div style="font-weight: 500; color: var(--text-primary);">
                            {{#if (eq type 'login')}}
                                🔐 用户登录
                            {{else if (eq type 'registration')}}
                                👤 用户注册
                            {{else}}
                                📝 {{type}}
                            {{/if}}
                        </div>
                        <div style="font-size: 12px; color: var(--text-muted);">
                            {{user}} - {{tenant}}
                        </div>
                    </div>
                    <div style="font-size: 12px; color: var(--text-muted);">
                        {{formatDate timestamp}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="card-footer">
            <a href="/admin/logs" class="btn btn-secondary btn-sm">查看所有日志</a>
        </div>
    </div>
</div>

<!-- 快速操作 -->
