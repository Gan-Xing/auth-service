{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "独立的认证服务 - 支持用户注册/登录/JWT/微信登录等",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "dev": "./scripts/dev.sh",
    "dev:quick": "npm run build && cp -r views dist/ && cp -r public dist/ && npm run start:dev",
    "postbuild": "cp -r views dist/ && cp -r public dist/",
    "tailwind:build": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/tailwind.css",
    "tailwind:watch": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/tailwind.css --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "db:seed": "ts-node prisma/seed.ts",
    "db:setup": "npx prisma migrate dev && npm run db:seed"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "auth",
    "jwt",
    "nestjs",
    "microservice",
    "platform"
  ],
  "author": "ganxing",
  "license": "MIT",
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^5.7.1",
    "@types/express-session": "^1.18.2",
    "@types/hbs": "^4.0.5",
    "@vonage/server-sdk": "^3.21.2",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express-handlebars": "^8.0.1",
    "express-session": "^1.18.1",
    "hbs": "^4.2.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "jwt-decode": "^3.1.2",
    "libphonenumber-js": "^1.12.9",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^5.6.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "twilio": "^5.7.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.15",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^3.0.9",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.16",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
